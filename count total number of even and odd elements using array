
#include<stdio.h> 
#define size 5


int main()    
{    
int arr[size];
static int odd_count,even_count;

printf("Enter the elements into array:\n" );

for(int i=0;i<size;i++)
scanf("%d",&arr[i]);

for(int i=0;i<size;i++)
{
    if(arr[i]%2==0)
    even_count++;
    
    else
    odd_count++;
}


printf("the number of even elements %d\n",even_count);
printf("the number of even elements %d",odd_count);
return 0;
}
